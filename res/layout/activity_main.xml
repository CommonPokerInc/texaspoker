<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_img_bg"
    tools:context=".MainActivity"
    android:id="@+id/main_view" >

    <ImageView
        android:id="@+id/main_img_desk"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/main_img_desk"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"  />

    <ImageView
        android:id="@+id/main_img_light"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_img_light"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"  />

    <ImageView
        android:id="@+id/main_img_curtain_left"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_img_curtain_left"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"  />

    <ImageView
        android:id="@+id/main_img_curtain_right"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/main_img_curtain_right"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/main_img_curtain_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_img_curtain_top"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />

    <TextView
        style="@style/main_txt_style_extra"
        android:id="@+id/main_btn_transfer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginLeft="@dimen/main_btn_margin"
        android:text="@string/main_transfer_to_friends"
        android:gravity="center"
        android:drawableLeft="@drawable/main_btn_transfer"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/main_btn_help"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/main_btn_margin"
        android:background="@drawable/main_btn_help"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"  />

    <CheckBox
        android:id="@+id/main_btn_voice"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginRight="@dimen/main_btn_margin"
        android:layout_toLeftOf="@id/main_btn_help"
        android:background="@drawable/main_btn_voice"
        android:button="@null"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"  />

    <RelativeLayout
        android:id="@+id/main_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageButton
            android:id="@+id/main_btn_cretae"
            android:layout_width="@dimen/main_btn_big_width"
            android:layout_height="@dimen/main_btn_big_height"
            android:background="@drawable/main_btn_create"
            android:contentDescription="@string/app_name"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/main_btn_join"
            android:layout_width="@dimen/main_btn_big_width"
            android:layout_height="@dimen/main_btn_big_height"
            android:layout_below="@id/main_btn_cretae"
            android:layout_marginTop="15dp"
            android:background="@drawable/main_btn_join"
            android:contentDescription="@string/app_name"
            android:visibility="invisible" />
    </RelativeLayout>
	<LinearLayout android:id="@+id/main_btn_self"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/main_btn_self"
        android:layout_margin="@dimen/main_btn_margin"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="invisible">
	    <ImageView android:id="@+id/main_img_avatar"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:padding="5dp"
	        android:contentDescription="@string/action_settings"
	        android:src="@drawable/game_avatar_s2"/>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:orientation="vertical">
	    <TextView
	        style="@style/main_txt_style"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"/>
	    <TextView 
	        android:text="@string/main_self"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        style="@style/main_txt_style"
	        android:gravity="center"/>
	    </LinearLayout>
	</LinearLayout>
	<TextView
	    style="@style/main_txt_style"
        android:id="@+id/main_btn_money"
        android:layout_width="180dp"
        android:layout_height="@dimen/main_btn_size"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_btn_money"
        android:contentDescription="@string/app_name"
        android:text="@string/default_money"
        android:textColor="@color/main_txt_color"
        android:gravity="center"
        android:visibility="invisible"/>
	<TextView
	    style="@style/main_txt_style"
        android:id="@+id/main_btn_market"
        android:text="@string/main_market"
        android:layout_width="150dp"
        android:layout_height="@dimen/main_btn_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|right"
        android:paddingRight="40dp"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_marginRight="@dimen/main_btn_margin"
        android:background="@drawable/main_btn_market"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />
</RelativeLayout>