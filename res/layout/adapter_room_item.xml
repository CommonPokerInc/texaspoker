<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    <LinearLayout android:id="@+id/room_item_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/room_create_item_bg">
        <TextView android:id="@+id/room_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/app_name"/>
        <TextView android:id="@+id/room_item_money"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/room_img_bet"
            android:text="@string/default_money"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
