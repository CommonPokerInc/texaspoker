<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_help_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/dialog_img_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <RadioGroup
            android:id="@+id/dialog_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                style="@style/dialog_radio_btn"
                android:text="@string/dialog_help_rule"
                android:id="@+id/dialog_btn_rule"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="@dimen/dialog_help_radio_height"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:checked="true" />
            <RadioButton
                style="@style/dialog_radio_btn"
                android:text="@string/dialog_help_poker"
                android:id="@+id/dialog_btn_poker"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="@dimen/dialog_help_radio_height"
                android:layout_weight="1"
                android:layout_margin="5dp" />
            <RadioButton
                style="@style/dialog_radio_btn"
                android:text="@string/dialog_help_pool"
                android:id="@+id/dialog_btn_pool"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="@dimen/dialog_help_radio_height"
                android:layout_weight="1"
                android:layout_margin="5dp" />
            <RadioButton
                style="@style/dialog_radio_btn"
                android:text="@string/dialog_help_question"
                android:id="@+id/dialog_btn_question"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="@dimen/dialog_help_radio_height"
                android:layout_weight="1"
                android:layout_margin="5dp" />
        </RadioGroup>
		<RelativeLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/dialog_layout_inner_bg"
            android:layout_above="@id/dialog_radio_group">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp"
            android:layout_above="@+id/dialog_layout_bottom"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <include 
                    android:id="@+id/dialog_layout_rule"
                    layout ="@layout/dialog_help_rule"/>
                <include 
                    android:id="@+id/dialog_layout_pool"
                    layout ="@layout/dialog_help_pool"
                    android:visibility="invisible"/>
                <include 
                    android:id="@+id/dialog_layout_poker"
                    layout ="@layout/dialog_help_poker"
                    android:visibility="invisible"/>
                <include 
                    android:id="@+id/dialog_layout_question"
                    layout ="@layout/dialog_help_question"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout android:id="@+id/dialog_layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dialog_img_bottom">
            <ImageView android:id="@+id/dialog_img_indicatior_rule"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/dialog_img_indicator"
                android:contentDescription="@string/action_settings"/>
            <ImageView android:id="@+id/dialog_img_indicatior_poker"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/dialog_img_indicator"
                android:contentDescription="@string/action_settings"
                android:visibility="invisible"/>
            <ImageView android:id="@+id/dialog_img_indicatior_pool"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/dialog_img_indicator"
                android:contentDescription="@string/action_settings"
                android:visibility="invisible"/>
            <ImageView android:id="@+id/dialog_img_indicatior_question"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/dialog_img_indicator"
                android:contentDescription="@string/action_settings"
                android:visibility="invisible"/>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/dialog_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/dialog_btn_close"
        android:contentDescription="@string/app_name" />

    <TextView
        style="@style/main_txt_style"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_img_header"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="8dp"
        android:text="@string/dialog_help_title" />

</RelativeLayout>