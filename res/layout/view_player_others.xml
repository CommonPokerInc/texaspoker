<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/game_player_surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/game_player_avatar_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/game_player_brand_big"
            android:layout_alignLeft="@+id/game_player_brand_big"
            android:background="@drawable/game_avatar_g2"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/game_player_avatar_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/game_player_brand_big"
            android:layout_marginRight="@dimen/game_player_padding_side"
            android:background="@drawable/game_avatar_b1"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/game_player_brand_big"
            style="@style/game_txt_style_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_player_avatar_big"
            android:background="@drawable/game_brand_b1"
            android:gravity="center"
            android:text="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game_player_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" >

        <TextView
            android:id="@+id/game_player_avatar_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_avatar_s1"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/game_player_brand_small"
            style="@style/game_txt_style_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_player_avatar_small"
            android:background="@drawable/game_brand_s1"
            android:gravity="center"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/game_player_money"
            style="@style/game_txt_style_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/game_player_brand_small"
            android:layout_alignRight="@id/game_player_brand_small"
            android:background="@drawable/game_player_money"
            android:gravity="center_vertical|right"
            android:text="@string/default_money" />
    </RelativeLayout>
	<TextView
            android:id="@+id/game_player_round_bet"
            style="@style/game_txt_style_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/game_player_inner"
            android:layout_below="@id/game_player_surface"
            android:background="@drawable/game_player_round_bet"
            android:gravity="center"
            android:text="@string/default_money" />
</RelativeLayout>