<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    
    <!-- start——默认对话框的配置 -->
    
    <style name="dialog_default_my_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#c0392b</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:onClick">dialogShow</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    
     <style name="DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dialog_default_text_color</item>
    </style>

    <style name="dialog_tran">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="dialog_default_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/dialog_default_btn_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- end——默认对话框的配置 -->
    
    <!-- start——首页 -->
    <style name="main_txt_style">
        <item name="android:textColor">@color/main_txt_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:clickable">true</item>
    </style>
    <style name="main_txt_style_extra">
        <item name="android:textColor">@color/main_txt_color_extra</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item> 
    </style>
    
    <!-- start——帮助 -->
    <style name="dialog_txt_style">
        <item name="android:textColor">@color/dialog_txt_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">3dp</item> 
    </style>
    <style name="dialog_txt_style_point">
        <item name="android:textColor">@color/dialog_txt_color_point</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3dp</item>  
    </style>
    <style name="dialog_txt_small_style">
        <item name="android:textColor">@color/dialog_txt_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">3dp</item> 
    </style>
    <style name="dialog_txt_style_big_point">
        <item name="android:textColor">@color/dialog_txt_color_point</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>
    
    <style name="dialog_radio_btn">
        <item name="android:textColor">@color/main_txt_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/dialog_btn_tab</item>
        <item name="android:button">@null</item>
    </style>
    
    <!-- 游戏 -->
    <style name="game_txt_style_big">
        <item name="android:textColor">@color/main_txt_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:clickable">true</item>
    </style>
    
    <style name="game_txt_style_small">
        <item name="android:textColor">@color/main_txt_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
